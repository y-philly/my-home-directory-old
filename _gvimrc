set enc=utf-8

" color
set background=dark
colorscheme solarized

" window size
"set columns=140
"set lines=50

" font
set gfn=Ricty_Diminished:h11:cSHIFTJIS
set renderoptions=type:directx,mode:5
set antialias

" GUI
set guioptions+=a
set guioptions-=m
set guioptions-=T
autocmd GUIEnter * set transparency=240
